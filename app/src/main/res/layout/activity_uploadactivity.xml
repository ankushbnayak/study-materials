<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uploadactivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <Button
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#fff"
        android:background="@drawable/button_back"
        android:id="@+id/button6"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Click here to choose a PDF "/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:gravity="center"
        android:id="@+id/textView5"
        android:layout_width="277dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:text="No file selected" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/name_of_notes"
                android:drawablePadding="20dp"
                android:background="@drawable/edittext_back"
                android:padding="20dp"
                android:hint="Name of PDF"
                android:drawableLeft="@drawable/ic_book_black_24dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/name_of_branch"
                android:drawablePadding="20dp"
                android:background="@drawable/edittext_back"
                android:padding="20dp"
                android:hint="Name of Branch"
                android:drawableLeft="@drawable/ic_local_library_black_24dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <Button

        android:drawableLeft="@drawable/ic_file_upload_black_24dp"
        android:id="@+id/button7"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Upload" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:text="CHECK THE SWITCH BELOW TO STORE THE NOTE PRIVATELY"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <Switch
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:id="@+id/account_type_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private "

                />
        </LinearLayout>
    </LinearLayout>

</ScrollView>